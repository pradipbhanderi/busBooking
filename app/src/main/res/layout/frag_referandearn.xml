<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/lin_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EA494A"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/img_back_refer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back"
                android:tint="@color/white" />

        </LinearLayout>

        <com.example.busbooking.helper.CustomTextviewBold
            style="@style/white_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Refer and Earn" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_bar">

        <LinearLayout
            android:id="@+id/lin_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EA494A"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:src="@drawable/img_refer"/>

            <com.example.busbooking.helper.CustomTextviewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Rs 100"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                style="@style/white_14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <com.example.busbooking.helper.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    style="@style/white_11"/>

                <com.example.busbooking.helper.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="@style/white_11"/>

                <com.example.busbooking.helper.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share\nCode"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="@style/white_11"/>

                <com.example.busbooking.helper.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="@style/white_11"/>

                <com.example.busbooking.helper.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earn"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="@style/white_11"/>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/lin_main"
            android:background="@drawable/ic_subtract"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rel_main">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reddxfALe"
            android:textColor="@color/theme_color"
            android:background="@drawable/dotted_line_referral"
            style="@style/white_16"/>


        <com.example.busbooking.helper.CustomTextviewBold
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/white_15"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/create_new_ride"
            android:paddingHorizontal="@dimen/_35sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="SAHRE"/>

        <com.example.busbooking.helper.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/black_11"
            android:alpha="0.7"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="You have 10 referrals pending"/>

        <com.example.busbooking.helper.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/black_11"
            android:alpha="0.7"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="Total Earnings -â‚¹ 0"/>

        <com.example.busbooking.helper.CustomTextviewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_14"
            android:alpha="0.7"
            android:textColor="@color/blue"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="How do I refer?"/>


    </LinearLayout>

</RelativeLayout>