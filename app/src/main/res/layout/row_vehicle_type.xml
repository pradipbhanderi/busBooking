<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_155sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCC54"
            android:paddingBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <com.example.busbooking.helper.CustomTextviewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                style="@style/black_14"
                android:text="Buses and\nMini Buses"/>

            <com.example.busbooking.helper.CustomTextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ideal for more than"
                android:layout_marginHorizontal="@dimen/_10sdp"
                style="@style/black_12"
                android:layout_marginTop="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp">

                <com.example.busbooking.helper.CustomTextViewSemiBold
                    style="@style/black_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="18" />

                <com.example.busbooking.helper.CustomTextViewSemiBold
                    style="@style/black_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="people" />

            </LinearLayout>
            
            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@drawable/bus"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>